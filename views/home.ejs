<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>
</head>
<body>
    <%- include('partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
  <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
    Here are our registered homes:
  </h2>
  <div class="gap-5 flex">
    <% registeredHomes.forEach(home => { %>
      <div class="bg-white border rounded-2xl shadow-md hover:shadow-xl transition duration-300">
        <!-- Image -->
        <img 
          src="<%= home.photoUrl %>" 
          alt="<%= home.houseName %>" 
          class="w-full h-35 object-cover rounded-t-2xl "
        />
        <!-- Info -->
        <div class="p-5">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            <%= home.houseName %>
          </h3>
          <p class="text-gray-600 mb-2">ğŸš© <%= home.location %></p>
          <p class="text-lg font-bold text-green-600 mb-4">à§³ <%= home.price %></p>
          <!-- Button -->
          <button class="w-full bg-red-500 text-white py-2 px-4 rounded-xl font-semibold hover:bg-red-600 transition">
            View Details
          </button>
        </div>
      </div>
    <% }) %>
  </div>
</main>
</body>

</html>